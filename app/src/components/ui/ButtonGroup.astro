---
interface Props {
  gap?: "small" | "medium" | "large";
  direction?: "row" | "column";
  justify?: "start" | "center" | "end" | "space-between";
  align?: "start" | "center" | "end" | "stretch";
}

const {
  gap = "medium",
  direction = "row",
  justify = "center",
  align = "center",
} = Astro.props;

const gapSizes = {
  small: "0.5rem",
  medium: "1rem",
  large: "1.5rem",
};
---

<div
  class="button-group"
  style={`--gap: ${gapSizes[gap]}; --direction: ${direction}; --justify: ${justify}; --align: ${align};`}
>
  <slot />
</div>

<style>
  .button-group {
    display: flex;
    gap: var(--gap);
    flex-direction: var(--direction);
    justify-content: var(--justify);
    align-items: var(--align);
    flex-wrap: wrap;
  }

  @media (max-width: 640px) {
    .button-group {
      flex-direction: column;
      align-items: stretch;
      gap: 0.75rem;
    }
  }
</style>
