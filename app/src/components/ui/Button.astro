---
interface Props {
  href: string;
  variant?: "primary" | "secondary";
  fullWidth?: boolean;
}

const { href, variant = "primary", fullWidth = false } = Astro.props;
---

<a href={href} class={`btn btn-${variant} ${fullWidth ? 'full-width' : ''}`}>
  <slot />
</a>

<style>
  .btn {
    display: inline-block;
    padding: 0.9rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 1rem;

    @media (max-width: 640px) {
      padding: 0.75rem 1.5rem;
      font-size: 0.95rem;
    }
  }

  .btn-primary {
    background: var(--accent);
    color: white;
    box-shadow: 0 4px 14px rgba(99, 102, 241, 0.3);

    &:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(99, 102, 241, 0.4);
    }
  }

  .btn-secondary {
    background: transparent;
    color: var(--accent);
    border: 2px solid var(--accent);

    &:hover {
      background: var(--accent);
      color: white;
      transform: translateY(-2px);
    }
  }

  .full-width {
    width: 100%;
    text-align: center;
  }
</style>
