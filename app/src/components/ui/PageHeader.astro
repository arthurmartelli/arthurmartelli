---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<header class="page-header">
  <h1>{title}</h1>
  {subtitle && <p>{subtitle}</p>}
</header>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 2rem;

    & h1 {
      font-size: clamp(2rem, 5vw, 3rem);
      margin-bottom: 0.5rem;
    }

    & p {
      font-size: clamp(1rem, 2vw, 1.2rem);
      color: rgb(var(--gray));
    }
  }
</style>
