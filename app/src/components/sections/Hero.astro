---
interface Props {
  greeting?: string;
  title: string;
  subtitle?: string;
  description?: string;
}

const { greeting, title, subtitle, description } = Astro.props;
---

<section class="hero">
  {greeting && <div class="hero-greeting">{greeting}</div>}
  <h1 class="hero-title">{title}</h1>
  {subtitle && <p class="hero-subtitle">{subtitle}</p>}
  {description && <p class="hero-description">{description}</p>}
  <div class="hero-actions">
    <slot />
  </div>
</section>

<style>
  .hero {
    text-align: center;
    padding: 2rem 0;
  }

  .hero-greeting {
    font-size: clamp(1rem, 2vw, 1.2rem);
    color: var(--accent);
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .hero-title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    margin: 0 0 0.5rem 0;
    line-height: 1.1;
    color: rgb(var(--black));
  }

  .hero-subtitle {
    font-size: clamp(1.2rem, 3vw, 1.8rem);
    color: rgb(var(--gray));
    margin-bottom: 1rem;
  }

  .hero-description {
    font-size: clamp(1rem, 2vw, 1.1rem);
    color: rgb(var(--gray-dark));
    max-width: 600px;
    margin: 0 auto 1.5rem;
    line-height: 1.7;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 640px) {
    .hero {
      padding: 1.5rem 0;
    }

    .hero-actions {
      flex-direction: column;
      align-items: stretch;
      gap: 0.75rem;
    }
  }
</style>
