---
import BaseLayout from "./BaseLayout.astro";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  description: string;
  maxWidth?: "narrow" | "medium" | "wide";
  image?: ImageMetadata;
  imageAlt?: string;
}

const { title, description, maxWidth = "medium", image, imageAlt } = Astro.props;

const maxWidthMap = {
  narrow: "720px",
  medium: "960px",
  wide: "1200px",
};
---

<BaseLayout title={title} description={description} image={image} imageAlt={imageAlt}>
  <main class={`max-width-${maxWidth}`}>
    <slot />
  </main>
</BaseLayout>

<style>
  main {
    flex: 1;
    width: 100%;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .max-width-narrow {
    max-width: 720px;
  }

  .max-width-medium {
    max-width: 960px;
  }

  .max-width-wide {
    max-width: 1200px;
  }

  @media (max-width: 720px) {
    main {
      padding: 1.5rem 1rem;
    }
  }
</style>
